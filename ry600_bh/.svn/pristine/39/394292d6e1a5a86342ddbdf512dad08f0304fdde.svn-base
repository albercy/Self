/* pages/shopcart/shopcart.wxss */
@import '../account/orderList/orderList.wxss';
page{
  height: 100%;
}
.loading_wrap{
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999;
	display: flex;
	justify-content: center;
	align-items: center;
}
.loading_wrap image{
	width: 100rpx;
	height: 100rpx;
}
.edit{
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  background-color: rgba(255, 85, 0, 0.9);
  line-height: 75rpx;
  color: #FFF;
  text-align: center;
  position: fixed;
  top: 18rpx;
  right: 18rpx;
  font-size: 22rpx;
  z-index: 99;
}
.row_top{
  padding-left: 18rpx;
  padding-right: 18rpx;
  align-items: center;
}
.block{
  background-color: #FFF;
  margin-bottom: 10rpx;
}
.row_top{
  justify-content: flex-start;
  align-items: center;
  line-height: auto;
}
.check_box{
  width: 24rpx;
  height: 24rpx;
  border: 1rpx solid #999;
  border-radius: 50%;
  margin-right: 18rpx;
}
.selected{
  padding: 2rpx;
  border: none;
  background-position: 0 -288rpx; 
}
.sale_tag{
  font-size: 22rpx;
  line-height: 33rpx;
  height: 33rpx;
  margin: 10rpx 0 -8rpx 55rpx;
  color: #777;
} 
.tag_name{
  display: block;
  float: left;
  color: #FFF;
  font-size: 20rpx;
  background-color: #FF2D46;
  border-radius: 15rpx;
  padding: 0 12rpx;
  margin-right: 8rpx;
}
.pdt{
  width: 750rpx;
  overflow: hidden;
  position: relative;
}
.pdt_title{
  line-height: 34rpx;
  font-size: 26rpx;
}
.pdt_info{
  justify-content: space-between;
  height: 162rpx;
  width: 470rpx;
}
.count{
  position: absolute;
  right: 18rpx;
  bottom: 26rpx;
  border: 2rpx solid #AAA;
  display: flex;
  width: 166rpx;
  height: 38rpx;
  justify-content: space-between;
  align-items: center;
}
.count input{
  height: 60rpx;
  width: 75rpx;
  line-height: 38rpx;
  min-height: 28rpx;
  padding: 0 5rpx;
  text-align: center;
  font-size: 24rpx;
}
.count text{
  display: block;
  width: 36rpx;
  height: 28rpx;
  line-height: 24rpx;
  text-align: center;
}
.sub{
  border-right: 2rpx solid #DDD;
}
.add{
  border-left: 2rpx solid #DDD;
}
.option{
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 100%;
  color: #FFF;
  display: flex;
}
.option .delete, .option .favorite{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}
.delete{
  background-color: #FF2D46;
}
.favorite{
  background-color: #F50;
}
.row_main{
  width: 750rpx;
  position: relative;
}
.main_info{
  width: 710rpx;
  margin-left: -200rpx;
  background-color: #FFF;
  border-bottom: 2rpx solid #DDD;
  -webkit-transform: translateX(200rpx);
  transform: translateX(200rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 18rpx;
  padding: 0 20rpx 18rpx;
  position: relative;
  z-index: 9;
}
.sel_gift{
	font-size: 26rpx;
	color: #666;
}
.sel_gift .red{
	text-decoration: underline;
}
.rewards{
	border-bottom: 2rpx solid #DDD;
	padding: 10rpx 62rpx;
}
.reward{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin: 10rpx 0;
}
.gift_info{
	display: flex;
	align-items: center;
}
.gift_info image{
	width: 78rpx;
	height: 78rpx;
	margin-right: 20rpx;
	border: 1rpx solid #EEE;
}
.gift_count{
	display: flex;
	align-items: center;
}
.gift_count input{
	width: 50rpx;
	text-align: right;
	height: 30rpx;
	line-height: 30rpx;
	font-size: 26rpx;
}
.gift_btn{
	width: 200rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 28rpx;
	background: #F50;
	color: #FFF;
	margin-bottom: 20rpx;
	display: none;
}
.gift_tip{
	display: none;
}
.gift_edit .gift_btn, .gift_edit .gift_tip{
	display: block;
}
.gift_edit input{
	border: 1rpx solid #DDD;
}
.touch_active{
  -webkit-transform: translateX(0rpx);
  transform: translateX(0rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.row_bottom{
  height: 106rpx;
  padding: 0 0 0 18rpx;
}
.sel_all{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.checkout_box{
  display: flex;
  flex-direction: row;
}
.checkout{
  flex-direction: column;
  text-align: right;
  margin-right: 35rpx;
}
.detail_info{
	font-size: 24rpx;
	color: #999;
	line-height: 24rpx;
}
.amount_box{
  height: 40rpx;
}
.freight{
  font-size: 22rpx;
}
.amount_text{
  font-size: 24rpx;
}
.to_buy{
  line-height: 106rpx;
  width: 188rpx;
  text-align: center;
}
.btn_disabled{
	background-color: #BBB;
}
.bottom_wrap{
	position: relative;
	height: 106rpx;
}
.fix_bottom{
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 98;
	width: 750rpx;
	height: 106rpx;
	background-color: #FFF;
	border-top: 2rpx solid #DDD;
	box-shadow: -20rpx -20rpx 20rpx #FAFAFA inset;
	padding: 0;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.fix_bottom .btn{
	width: 200rpx;
	text-align: center;
	line-height: 106rpx;
}
.sel_all_bottom{
	margin-left: 20rpx;
}