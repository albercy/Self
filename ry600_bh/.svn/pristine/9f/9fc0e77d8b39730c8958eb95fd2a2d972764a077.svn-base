<!--login.wxml-->
<view class='login'>
  <view class="logo_box">
    <image class="logo" mode="widthFix" src="{{logo}}"></image>
  </view>
  <view class='tip_box'><text class='tip'>{{tip}}</text></view>
  <view class="input_box">
    <view class='input_field'>
      <image class="name_icon input_icon"></image>
      <input class='input' type='text' placeholder='用户名 / 手机号' placeholder-class='placeholder' focus='true' bindinput='nameInput'></input>
    </view>
    <view class='input_field'>
      <image class='pwd_icon input_icon'></image>
      <input class='input' type='password' placeholder='密码' placeholder-style='color:#AAA' bindinput='passwordInput'></input>
    </view>
    <view class='forget_box'><text class='forget' bindtap='toForget'>忘记密码</text></view>
    <view class='btn_field'>
      <button class="btn" bindtap='doLogin'>登录</button>
    </view>
    <view class='version_box'>
      <text class='version'>版本号：0.0.2</text>
    </view>
  </view>
</view>
