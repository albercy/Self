<!--login.wxml-->
<view class='login'>
  <view class="logo_box">
    <image class="logo" mode="widthFix" src="{{logo}}"></image>
    <text class="logo_des">中国医药供应链云平台</text>
  </view>
  <view class='tip_box'><text class='tip'>{{tip}}</text></view>
  <view class="input_box">
    <view class='input_field'>
      <text class='input_name'>用户名：</text>
      <input class='input' type='text' placeholder='用户名/手机号' placeholder-style='color:#AAA' focus='true' bindinput='nameInput'></input>
    </view>
    <view class='input_field'>
      <text class='input_name'>密　码：</text>
      <input class='input' type='password' placeholder='用户名/手机号' placeholder-style='color:#AAA' bindinput='passwordInput'></input>
    </view>
    <view class='btn_field'>
      <button class="login_btn" bindtap='doLogin'>登 录</button>
    </view>
    <view class='version_box'>
      <text class='version'>版本号：0.0.0</text>
    </view>
  </view>
</view>
