.org_message {
  background-color: #f50;
  color: #fff;
  height: 60rpx;
  padding: 24rpx 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.org_message .message-left {
  display: flex;
}

.logo_ry {
  width: 180rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.store_crr {
  height: 32rpx;
  font-size: 22rpx;
  background-color: #fff;
  color: #f50;
  padding: 0 10rpx;
  border-radius: 6rpx;
}

.org_crr {
  font-size: 24rpx;
}

.searchBar {
  display: flex;
  height: 100rpx;
  background-color: #f50;
  color: #fff;
  padding: 0 30rpx;
}

.searchBar .search-scan {
  width: 72rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
}

.searchBar .scan-img {
  width: 45rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}

.searchBar .search-area {
  display: flex;
  margin-left: 15rpx;
  position: relative;
}

.searchBar .search-input {
  width: 460rpx;
  padding: 8rpx 0rpx 8rpx 60rpx;
  border-radius: 5px;
  background: #fff;
  color: #939393;
}

.searchBar .search-img{
  position: absolute;
  top: 15rpx;
  left: 12rpx;
  width: 40rpx;
  height: 40rpx;
}

.searchBar .search-txt{
  font-size: 34rpx;
  margin: 8rpx 0 8rpx 10rpx;
}