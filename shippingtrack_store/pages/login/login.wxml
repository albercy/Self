<view class="content">
  <image src='/images/logo.png' class='logo'></image>
  <form bindsubmit="loginSubmit">
    <view class='input-area'>
      <view class='area username'>
        <image src='/images/account.png' class='input-img'></image>
        <input name="userName" type="text" placeholder="用户名/帐号" value="{{username}}"></input>
      </view>
      <view class='area password'>
        <image src='/images/password.png' class='input-img'></image>
        <input name="password" type="password" placeholder="密码" value="{{password}}"></input>
      </view>
    </view>
    <button formType="submit" loading="{{btnLoading}}" class="login-btn bg-color" loading="{{btnLoad}}" plain="{{btnPlain}}">登 录</button>
  </form>
</view>