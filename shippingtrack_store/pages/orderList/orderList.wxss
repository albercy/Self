page {
  font-size: 30rpx;
  font-weight: 300;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.select {
  margin-top: 20rpx;
}

.select text {
  padding: 10rpx 20rpx;
  border: 1px solid #676767;
  margin-right: -1px;
}

.search {
  display: flex;
}

.search picker {
  padding: 3px;
}

.search input {
  border-bottom: 1px solid #676767;
}

.search label {
  padding: 10rpx 20rpx;
}

.order-content {
  margin-top: 40rpx;
  padding: 20rpx 5%;
}

.order-top, .order-title, .package-title {
  display: flex;
  justify-content: space-between;
}

.order-title {
  padding: 8rpx 10rpx;
  border-bottom: 1px solid #676767;
}

.order {
  margin-top: 40rpx;
  border: 1px solid #676767;
}

.package {
  padding: 10rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: column;
}

.package-none {
  text-align: right;
}

.page {
  width: 100%;
  display: flex;
  justify-content: center;
}

.page text {
  padding: 5rpx 15rpx;
  border: 1px solid #ccc;
  margin-left: -1px;
}

.page .curr {
  color: #f00;
}
