page {
  height: 100%;
  color: #676767;
  font-size: 33rpx;
}

.logistics {
  height: 100%;
}

.logistics-title {
  line-height: 50rpx;
  padding: 10rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.title-down{
  display: flex;
  justify-content: space-between;
}

.fromTo {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top:1px dotted #ccc;
}

.fromTo .message{
  display: flex;
  justify-content: space-between;
}

.fromTo .down{
  margin-top: 20rpx;
}

.logistics-content {
  border-top: 1px solid #676767;
}

.logistics-list {
  line-height: 60rpx;
  display: flex;
  flex-direction: column;
  padding: 10rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.logistics-list:last-child {
  border: none;
}

.logistics-list text:last-child {
  font-size: 31rpx;
}

.products-content {
  border-top: 1px solid #676767;
  padding: 10rpx 30rpx;
}

.products-list,.noProduct{
  margin-top: 20rpx;
}
.product-item{
  border-bottom: 1px dotted #ccc;
  line-height: 60rpx;
}
.product-item:last-child{
  border: none;
}
.noProduct{
  text-align: center;
}