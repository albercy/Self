.order_content {
  margin-top: 112rpx;
  z-index: 1000;
}

.order_item {
  color: #676767;
  margin-top: 20rpx;
  background-color: #fff;
}

.order_title {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ccc;
}

.order_title .order_msg text:first-child {
  font-size: 33rpx;
  color: #191816;
  margin-right: 20rpx;
}

.order_title .order_msg text:last-child {
  color: #576069;
}

.order_title .order_time {
  font-size: 26rpx;
  align-self: flex-end;
}

.package_item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.package_item:last-child {
  border-bottom: none;
}

.package_item image {
  width: 110rpx;
  height: 110rpx;
  margin: 0 80rpx 0 50rpx;
}

.package_msg {
  line-height: 60rpx;
}

.package_msg .msg view text:first-child {
  font-size: 32rpx;
  color: #191816;
}

.package_msg .msg view text:last-child {
  color: #576069;
}

.package_msg .up {
  display: flex;
  justify-content: space-between;
}

.package_msg .num text:first-child {
  letter-spacing: 15rpx;
}

.package_msg .state text:first-child {
  letter-spacing: 60rpx;
  margin-right: -45rpx;
}

.package_msg .time text:first-child {
  margin-right: 15rpx;
}

.package_msg .state text:last-child {
  color: #ff6347 !important;
}

.noPackage {
  padding: 30rpx;
  text-align: center;
}

.noOrder {
  margin-top: 132rpx;
  text-align: center;
  font-size: 34rpx;
  color: #676767;
}