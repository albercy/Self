@import 'drawer.wxss';

.header-msg {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 4% 0;
}

.header-msg .msg-rel {
  background: #fff;
  color: #2a9293;
  padding: 0 8rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.header-txt {
  height: 150rpx;
  text-align: center;
  font-size: 55rpx;
  font-style: italic;
  letter-spacing: 8rpx;
  font-weight: 600;
  line-height: 170rpx;
}

.header-input {
  height: 100rpx;
  padding: 0 10%;
}

.header-input input {
  background: #fff;
  border-radius: 30rpx;
  color: #939393;
  height: 64rpx;
}

.header-input .holder-txt {
  font-size: 28rpx;
  text-align: center;
}

.content-up {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  height: 180rpx;
  font-size: 28rpx;
  font-size: 28rpx;
  color: #666;
}

.content-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 20%;
}

.content-item image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 8rpx;
}

.content-item .small {
  width: 64rpx;
  height: 64rpx;
  margin-top: 6rpx;
}

.content-tip {
  margin-top: 20rpx;
  background-color: #fff;
  color: #2c2c2c;
}

.tip-title {
  text-align: center;
  font-size: 35rpx;
  padding: 20rpx 0;
}

.tip-content {
  display: flex;
  flex-direction: column;
  padding:10rpx 5% 20rpx;
  line-height: 55rpx;
  color: #515151;
}
